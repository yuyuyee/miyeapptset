<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:gravity="left">

        <RelativeLayout
            android:layout_width="205dp"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/iv_image_l"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="28dp"
                android:scaleType="centerCrop"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/tv_tile_l"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="204dp"
                android:layout_height="28dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_subtitle_l"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tile_l"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="157dp"
                android:layout_marginEnd="-3dp"
                android:paddingStart="8dp"
                android:paddingBottom="4dp"
                android:textColor="@color/design_default_color_secondary" />

            <ImageView
                android:id="@+id/good_l"
                android:layout_width="29dp"
                android:layout_height="28dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/ic_baseline_grade_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:gravity="right">

            <RelativeLayout
                android:layout_width="205dp"
                android:layout_height="220dp">

                <ImageView
                    android:id="@+id/iv_image_r"
                    android:layout_width="match_parent"
                    android:layout_height="192dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="28dp"
                    android:scaleType="centerCrop"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/tv_tile_r"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="203dp"
                    android:layout_height="28dp"

                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="0dp"
                    android:layout_marginBottom="0dp"
                    android:paddingStart="8dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_subtitle_r"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_tile_r"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="157dp"
                    android:layout_marginEnd="1dp"
                    android:paddingStart="8dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/design_default_color_secondary" />

                <ImageView
                    android:id="@+id/good_r"
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/ic_baseline_grade_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>








</androidx.cardview.widget.CardView>